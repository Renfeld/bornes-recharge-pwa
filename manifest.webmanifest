{
  // Informations de base de l'application PWA
  "name": "Bornes de Recharge - Carte Interactive",
  "short_name": "Bornes Recharge",
  "description": "Carte interactive des bornes de recharge électrique en France",
  
  // URL de démarrage de l'application
  "start_url": "/",
  
  // Mode d'affichage (standalone = app native, minimal-ui = avec barre d'adresse minimale)
  "display": "standalone",
  
  // Orientation préférée (any = portrait/paysage, portrait = vertical uniquement)
  "orientation": "any",
  
  // Couleur de thème (barre de statut Android)
  "theme_color": "#2563eb",
  
  // Couleur d'arrière-plan (écran de chargement)
  "background_color": "#ffffff",
  
  // Catégorie de l'app dans les stores
  "categories": ["navigation", "utilities", "travel"],
  
  // Langue par défaut
  "lang": "fr-FR",
  
  // Scope de l'application (URLs couvertes par la PWA)
  "scope": "/",
  
  // Icônes pour différentes résolutions (iOS et Android)
  "icons": [
    {
      // Icône 192x192 pour Android (écran d'accueil)
      "src": "data:image/svg+xml;base64,",
      "sizes": "192x192",
      "type": "image/svg+xml",
      "purpose": "any maskable"
    },
    {
      // Icône 512x512 pour Android (store et splash screen)
      "src": "data:image/svg+xml;base64,",
      "sizes": "512x512",
      "type": "image/svg+xml",
      "purpose": "any maskable"
    },
    {
      // Icône 180x180 pour iOS (Touch Icon)
      "src": "data:image/svg+xml;base64,",
      "sizes": "180x180",
      "type": "image/svg+xml"
    }
  ],
  
  // Captures d'écran pour l'installation (optionnel)
  "screenshots": [
    {
      "src": "data:image/svg+xml;base64,",
      "sizes": "320x568",
      "type": "image/svg+xml",
      "form_factor": "narrow"
    }
  ],
  
  // Raccourcis dans le menu contextuel (Android)
  "shortcuts": [
    {
      "name": "Voir la carte",
      "short_name": "Carte",
      "description": "Afficher directement la carte des bornes",
      "url": "/",
      "icons": [
        {
          "src": "data:image/svg+xml;base64,",
          "sizes": "96x96",
          "type": "image/svg+xml"
        }
      ]
    }
  ],
  
  // Informations sur l'éditeur
  "id": "/",
  "dir": "ltr",
  "prefer_related_applications": false
}
